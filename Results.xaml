<Window x:Class="MemoryGameSecure.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGameSecure"
        mc:Ignorable="d"
        Title="Results" Height="450" Width="800" Background="LightSkyBlue">
    <Grid>
        <Label x:Name="lblHeader" Content="Results Page" FontSize="18" HorizontalAlignment="Left" Margin="95,27,0,0" VerticalAlignment="Top" Height="40" Width="412"/>
        <Button x:Name="btnReturnToGame" Content="Return to Game" Click="btnReturnToGameClick" HorizontalAlignment="Left" Margin="71,360,0,0" VerticalAlignment="Top" Height="37" Width="110"/>
        <Button x:Name="btnSignOut" Content="Sign Out" Click="btnSignOutClick" HorizontalAlignment="Left" Margin="221,360,0,0" VerticalAlignment="Top" Height="37" Width="102"/>
        <Button x:Name="btnExit" Content="Exit" Click="btnExitClick" HorizontalAlignment="Left" Margin="360,360,0,0" VerticalAlignment="Top" Height="37" Width="77"/>
        <Label  x:Name="lblResults" Content="You have no saved results" HorizontalAlignment="Left" Margin="95,72,0,0" VerticalAlignment="Top" Height="260" Width="366"/>

    </Grid>
</Window>
